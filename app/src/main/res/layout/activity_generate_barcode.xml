<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/agb_textview_to_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paying to:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/agb_textview_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:layout_marginEnd="16dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/agb_textview_amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amount"
            android:textSize="17sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/agb_textview_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/agb_textview_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan below QR code at the shop to pay."
            android:textSize="17sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>

        <ImageView
            android:id="@+id/agb_imageview_bitmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>