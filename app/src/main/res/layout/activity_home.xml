<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ah_layout_payby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.01"
            android:text="@string/mobile_number"
            android:textSize="17sp"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/scan_qr_code"
            android:textSize="17sp"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ah_til_mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ah_layout_payby"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/ah_tiet_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="phone"
            android:textSize="17sp"
            android:hint="@string/mobile_number"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/ah_textview_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ah_til_mobile_number"
        android:layout_marginStart="16dp"
        android:text="Rs."
        android:textSize="17sp"
        android:layout_alignBottom="@+id/ah_til_amount"
        android:gravity="bottom"
        android:paddingEnd="12dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ah_til_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ah_til_mobile_number"
        android:layout_toEndOf="@+id/ah_textview_symbol"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/ah_tiet_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:textSize="17sp"
            android:hint="@string/amount"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Pay"
        android:textAllCaps="true"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:layout_below="@+id/ah_til_amount"
        android:layout_alignEnd="@+id/ah_til_amount" />
</RelativeLayout>
